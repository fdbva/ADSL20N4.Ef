@model Mvc.ViewModels.LivroAutorCreateViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>
<hr />
<form asp-action="Create" class="col-md-12">
    <div class="row justify-content-around">
        <div class="col-md-5">
            <h2>Livro</h2>
            
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Titulo" class="control-label"></label>
                <input asp-for="Titulo" class="form-control"/>
                <span asp-validation-for="Titulo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Isbn" class="control-label"></label>
                <input asp-for="Isbn" class="form-control"/>
                <span asp-validation-for="Isbn" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Publicacao" class="control-label"></label>
                <input asp-for="Publicacao" class="form-control"/>
                <span asp-validation-for="Publicacao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AutorId" class="control-label"></label>
                <select asp-for="AutorId" class="form-control" asp-items="ViewBag.Autores">
                    <option selected value="">-</option>
                </select>
                <span asp-validation-for="AutorId" class="text-danger"></span>
            </div>
        </div>
        <div class="col-md-5">
            <h2>Autor</h2>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control"/>
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="UltimoNome" class="control-label"></label>
                <input asp-for="UltimoNome" class="form-control"/>
                <span asp-validation-for="UltimoNome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Nascimento" class="control-label"></label>
                <input asp-for="Nascimento" class="form-control"/>
                <span asp-validation-for="Nascimento" class="text-danger"></span>
            </div>
        </div>
    </div>

    <div class="form-group">
        <input type="submit" value="Create" class="btn btn-primary"/>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}

<script>
    const autorSelect = document.getElementById("AutorId");
    const nomeElement = document.getElementById("Nome");
    const ultimoNomeElement = document.getElementById("UltimoNome");
    const nascimentoElement = document.getElementById("Nascimento");

    autorSelect.onchange = () => {
        console.log(autorSelect.value);
        const disabled = autorSelect.value !== "";

        nomeElement.disabled = disabled;
        ultimoNomeElement.disabled = disabled;
        nascimentoElement.disabled = disabled;
    };
</script>
}
